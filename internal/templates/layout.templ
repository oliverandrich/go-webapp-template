package templates

templ Layout(title string) {
	<!DOCTYPE html>
	<html lang={ Locale(ctx) }>
		<head>
			<meta charset="UTF-8"/>
			<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
			<title>{ title }</title>
			<link rel="stylesheet" href={ CSSPath(ctx) }/>
		</head>
		<body>
			{ children... }
			<script src={ JSPath(ctx) }></script>
		</body>
	</html>
}
